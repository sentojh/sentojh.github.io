<style>
  /* 저자 라인 기본 스타일 */
  .pub-authors { font-size: 0.95rem; font-weight: 400; margin: 0 0 .25rem; }
  /* 내 이름만 강조 (밑줄은 text-decoration 대신 border로) */
  .pub-authors .me {
    border-bottom: 2px solid currentColor;
    padding-bottom: 1px;
    font-weight: 700;
  }
  /* 윗첨자 별 */
  .pub-authors .star {
    font-weight: 700;
    margin-left: 1px;
    font-size: .8em;
    line-height: 0;
  }
</style>

<ul class="card-text font-weight-light list-group list-group-flush">
  {%- assign publications = data[1] | sort: 'releaseDate' | reverse -%}
  {%- for content in publications -%}
    <li class="list-group-item">
      <div class="row">
        <!-- Date badge column -->
        <div class="col-2 col-sm-2 col-md-2 text-center date-column">
          {%- if content.releaseDate -%}
            {%- assign date = content.releaseDate | split: '-' | join: '.' -%}
          {%- else -%}
            {%- assign date = '' -%}
          {%- endif -%}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ date }}</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Content column -->
        <div class="col-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <!-- Title -->
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {%- if content.url -%}
              <a href="{{ content.url }}">{{ content.name }}</a>
            {%- else -%}
              {{ content.name }}
            {%- endif -%}
          </h6>

        <!-- Authors (underline only my name) -->
        {%- assign my_name_aliases = "Jonghyeok Kim|Kim, Jonghyeok|Jonghyeok H. Kim|J. H. Kim" | split:"|" -%}

        {%- if content.authors -%}
          {%- if content.authors.first -%}
            {%- assign _authors_raw = content.authors -%}
          {%- else -%}
            {%- assign _authors_raw = content.authors | split: "," -%}
          {%- endif -%}

          {%- capture authors_html -%}
            {%- for a in _authors_raw -%}
              {%- assign a_trim = a | strip -%}

              {%- assign last_char = a_trim | slice: -1, 1 -%}
              {%- assign has_star = false -%}
              {%- if last_char == "*" or last_char == "＊" -%}
                {%- assign has_star = true -%}
              {%- endif -%}

              {%- assign a_cmp = a_trim -%}
              {%- if has_star -%}
                {%- assign len = a_trim | size -%}
                {%- assign len_minus_1 = len | minus: 1 -%}
                {%- assign a_cmp = a_trim | slice: 0, len_minus_1 | strip -%}
              {%- endif -%}

              {%- assign is_me = false -%}
              {%- for alias in my_name_aliases -%}
                {%- if a_cmp == alias -%}{%- assign is_me = true -%}{%- endif -%}
              {%- endfor -%}

              {%- if is_me -%}
                <span class="me">{{ a_cmp }}</span>
              {%- else -%}
                {{ a_cmp }}
              {%- endif -%}
              {%- if has_star -%}<sup class="star">*</sup>{%- endif -%}

              {%- unless forloop.last -%}, {% endunless -%}
            {%- endfor -%}
          {%- endcapture -%}

          <p class="ml-1 ml-md-4 pub-authors">{{ authors_html | strip_newlines }}</p>
        {%- endif -%}

          <!-- Venue / publisher -->
          {%- if content.publisher -%}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.publisher }}</h6>
          {%- endif -%}

          <!-- Optional summary -->
          {%- if content.summary -%}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          {%- endif -%}
        </div>
      </div>
    </li>
  {%- endfor -%}
</ul>